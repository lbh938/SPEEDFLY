<div class="header-wrapper">
<header class="site-header" role="banner" data-section-id="{{ section.id }}" data-section-type="header-section">
  <div class="wrapper">
    <div class="grid--full">
      <div class="grid-item large--one-half">
        {% if template.name == 'index' %}
        <h1 class="header-logo" itemscope itemtype="http://schema.org/Organization">
          {% else %}
          <div class="h1 header-logo" itemscope itemtype="http://schema.org/Organization">
            {% endif %}
            {% if section.settings.logo %}
            {% capture image_size %}{{ section.settings.logo_max_width | escape }}x{% endcapture %}
            <a href="/" itemprop="url">
              <img src="{{ section.settings.logo | img_url: image_size }}"
                   srcset="{{ section.settings.logo | img_url: image_size }} 1x, {{ section.settings.logo | img_url: image_size, scale: 2 }} 2x"
                   alt="{{ section.settings.logo.alt | default: shop.name }}"
                   itemprop="logo">
            </a>
            {% else %}
            <a href="/" itemprop="url">{{ shop.name }}</a>
            {% endif %}
            {% if template.name == 'index' %}
            </h1>
          {% else %}
          
          </div>
        {% endif %}
        
      </div>
      
      <div class="grid-item large--one-half header-center">
        {% if section.settings.image_header != blank  and section.settings.image_header_position == "1" %}
        <div class="header-image-1">     
        {% capture image_size %}{{ section.settings.image_header_max_width | escape }}x{% endcapture %}

        <img src="{{ section.settings.image_header | img_url: image_size }}"
             srcset="{{ section.settings.image_header | img_url: image_size }} 1x, {{ section.settings.image_header | img_url: image_size, scale: 2 }} 2x"
             alt="{{ section.settings.image_header.alt | default: shop.name }}">
        </div>
        {% endif %}
        {% if section.settings.header_message != blank %} 
        <div class="rte header-baseline {% if section.settings.header_message_center == true %}text-center{% endif %}">
          {{ section.settings.header_message }}
        </div>
        {% endif %}
        
      </div>

      <div class="grid-item large--one-half text-center large--text-right header-right"> 
                
        {% if section.settings.image_header != blank  and section.settings.image_header_position == "0" %}
        <div class="header-image-1">     
        {% capture image_size %}{{ section.settings.image_header_max_width | escape }}x{% endcapture %}

        <img src="{{ section.settings.image_header | img_url: image_size }}"
             srcset="{{ section.settings.image_header | img_url: image_size }} 1x, {{ section.settings.image_header | img_url: image_size, scale: 2 }} 2x"
             alt="{{ section.settings.image_header.alt | default: shop.name }}">
        </div>
        {% endif %}
        
       {% if section.settings.header_message2 != blank %} 
        <div class="rte header-subtext">
          {{ section.settings.header_message2 }}
        </div>
        {% endif %}
      
        {% if section.settings.search_actived %}

        {% else %}
        {% include 'search-bar' %}

        {% endif %} 

        <a href="/cart" class="header-cart-btn header-cart-btn">
          <i class="fa fa-shopping-cart" aria-hidden="true"></i>
          {{ 'layout.cart.cart' | t }} <span class="cart-count cart-badge--desktop {% if cart.item_count == 0 %}hidden-count{% endif %}">{{ cart.item_count }}</span>
        </a>
        
        {% if shop.customer_accounts_enabled %}
          <span class="site-header--meta-links medium-down--hide boxconnexion-show-{{ section.settings.header_box_actived }}">
            
           <a href="/account" class="customer-login header-cart-btn2"><i class="fa fa-user" aria-hidden="true"></i>
             
             {% if customer %}
             {{ 'customer.account.title' | t }} 
             {% else %}
             {{ 'customer.login.title' | t }} 
             {% endif %}
            </a>
          </span>
          {% endif %}
        {% include 'mini-cart' %}
      </div>
    </div>

  </div>
  </header>

  <nav class="nav-bar" role="navigation">
    <div class="wrapper">
      {% include 'search-bar' %}
      {% include 'site-nav' %}
    </div>
  </nav>

  {% include 'mobile-navbar' %}

</div>